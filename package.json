{
  "name": "react-date-time-group",
  "version": "1.0.0",
  "description": "Datepicker with optional time",
  "main": "dist/DateTimeGroup.js",
  "scripts": {
    "ci": "npm run lint && npm run coverage",
    "coverage": "istanbul cover _mocha -- --compilers js:babel/register --require react-tests-globals-setup test/test* && istanbul check-coverage",
    "prepublish": "mkdir -p ./dist && babel ./src/DateTimeGroup.jsx > ./dist/DateTimeGroup.js",
    "prestart": "ulimit -n 9999",
    "start": "watchify -t babelify -t brfs doc/example.js -o doc/example-built.js -v",
    "test": "mocha --require react-tests-globals-setup --compilers js:babel/register test/test*",
    "lint": "make-up src test doc"
  },
  "browserify": {
    "transform": [
      "brfs"
    ]
  },
  "author": "Ollie Buck <ollie.buck@holidayextras.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/holidayextras/react-date-time-group.git"
  },
  "dependencies": {
    "moment": "^2.10.6",
    "react": "^0.14.2",
    "react-bootstrap": "^0.28.2",
    "react-datepicker": "^0.18.0",
    "react-dom": "^0.14.2",
    "react-time-select": "^2.0.0"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^6.3.0",
    "brfs": "^1.4.1",
    "browserify": "^11.2.0",
    "browserify-css": "^0.7.1",
    "chai": "^3.3.0",
    "dirty-chai": "^1.2.2",
    "enzyme": "^1.4.1",
    "insert-css": "^0.2.0",
    "istanbul": "^0.3.22",
    "jsdom": "^3.1.2",
    "make-up": "^7.1.0",
    "mocha": "^2.3.3",
    "react-addons-test-utils": "^0.14.6",
    "react-shallow-render": "^1.0.1",
    "react-tests-globals-setup": "^1.0.0",
    "sinon": "^1.17.1",
    "watchify": "^3.4.0"
  }
}
